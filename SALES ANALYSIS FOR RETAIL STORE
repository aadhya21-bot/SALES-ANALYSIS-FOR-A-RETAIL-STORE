   "source": [
    "import tkinter as tk\n",
    "from tkinter import messagebox\n",
    "\n",
    "def get_sales(num_days):\n",
    "    sales = []\n",
    "    for day in range(num_days):\n",
    "        val = float(input(\"Enter sales for day {}: \".format(day + 1)))\n",
    "        while val < 0:\n",
    "            print(\"Sales cannot be negative. Please try again.\")\n",
    "            val = float(input(\"Enter sales for day {}: \".format(day + 1)))\n",
    "        sales.append(val)\n",
    "    return sales\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "1b98626f-9b7e-40c2-9e09-e594f85b5329",
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "class SalesApp:\n",
    "    def __init__(self, root, num_days):\n",
    "        self.root = root\n",
    "        self.num_days = num_days\n",
    "        self.sales = []\n",
    "        self.current_day = 1\n",
    "\n",
    "        self.root.title(\"Sales Analysis For Retail Store\")\n",
    "\n",
    "        self.label = tk.Label(root, text=f\"Day {self.current_day} sales:\")\n",
    "        self.label.pack(pady=5)\n",
    "\n",
    "        self.entry = tk.Entry(root, width=20)\n",
    "        self.entry.pack(pady=5)\n",
    "\n",
    "        self.submit_btn = tk.Button(root, text=\"Submit\", command=self.submit_sales)\n",
    "        self.submit_btn.pack(pady=5)\n",
    "\n",
    "        self.result_label = tk.Label(root, text=\"\")\n",
    "        self.result_label.pack(pady=5)\n",
    "\n",
    "    def submit_sales(self):\n",
    "        try:\n",
    "            val = float(self.entry.get())\n",
    "            if val < 0:\n",
    "                messagebox.showerror(\"Error\", \"Sales cannot be negative.\")\n",
    "                self.entry.delete(0, tk.END)\n",
    "                return\n",
    "            self.sales.append(val)\n",
    "            self.entry.delete(0, tk.END)\n",
    "            self.current_day += 1\n",
    "            if self.current_day <= self.num_days:\n",
    "                self.label.config(text=f\"Day {self.current_day} sales:\")\n",
    "            else:\n",
    "                self.show_result()\n",
    "        except ValueError:\n",
    "            messagebox.showerror(\"Error\", \"Enter a valid number.\")\n",
    "            self.entry.delete(0, tk.END)\n",
    "\n",
    "    def show_result(self):\n",
    "        total = sum(self.sales)\n",
    "        average = total \n",
    "        highest = max(self.sales)\n",
    "        lowest = min(self.sales)\n",
    "        self.label.config(text=\"Entry complete.\")\n",
    "        self.entry.pack_forget()\n",
    "        self.submit_btn.pack_forget()\n",
    "        self.result_label.config(\n",
    "            text=f\"Total: {total}\\nAverage: {average:.2f}\\nHighest: {highest}\\nLowest: {lowest}\"\n",
    "        )\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    root = tk.Tk()\n",
    "    app = SalesApp(root, num_days=2)\n",
    "    root.mainloop()\n"
   ]
