  {
   "cell_type": "code",
   "execution_count": null,
   "id": "d8bcba50-930d-46dc-9954-670214f790d9",
   "metadata": {},
   "outputs": [],
   "source": [
    "import tkinter as tk\n",
    "from tkinter import ttk, messagebox\n",
    "import matplotlib.pyplot as plt\n",
    "from matplotlib.backends.backend_tkagg import FigureCanvasTkAgg\n",
    "from datetime import datetime\n",
    "\n",
    "class SalesApp:\n",
    "    def __init__(self, root, num_days):\n",
    "        self.root = root\n",
    "        self.num_days = num_days\n",
    "        self.sales = []\n",
    "        self.dates = []\n",
    "        self.current_day = 1\n",
    "\n",
    "        self.root.title(\"Sales Analysis For Retail Store\")\n",
    "        style = ttk.Style()\n",
    "        style.theme_use('clam')\n",
    "        root.configure(bg='#e6f2ff')\n",
    "        title = ttk.Label(root, text=\"Sales Analysis For Retail Store\", font=(\"Helvetica\", 18, \"bold\"), background=\"#e6f2ff\", foreground=\"#333\")\n",
    "        title.pack(pady=(10,3))\n",
    "\n",
    "        input_frame = ttk.Frame(root, padding=\"10 10 10 10\")\n",
    "        input_frame.pack(pady=10)\n",
    "\n",
    "        self.label = ttk.Label(input_frame, text=f\"Enter Date for Day {self.current_day} (YYYY-MM-DD):\")\n",
    "        self.label.grid(row=0, column=0, sticky=\"w\")\n",
    "        self.date_entry = ttk.Entry(input_frame, width=20)\n",
    "        self.date_entry.grid(row=0, column=1)\n",
    "\n",
    "        self.sales_label = ttk.Label(input_frame, text=f\"Enter Sales for Day {self.current_day}:\")\n",
    "        self.sales_label.grid(row=1, column=0, sticky=\"w\")\n",
    "        self.entry = ttk.Entry(input_frame, width=20)\n",
    "        self.entry.grid(row=1, column=1)\n",
    "\n",
    "        self.submit_btn = ttk.Button(input_frame, text=\"Submit\", command=self.submit_sales)\n",
    "        self.submit_btn.grid(row=2, column=0, columnspan=2, pady=5)\n",
    "\n",
    "        target_frame = ttk.Frame(root, padding=\"10 10 10 10\")\n",
    "        target_frame.pack(pady=(5,10))\n",
    "\n",
    "        self.target_label = ttk.Label(target_frame, text=\"Enter Sales Target:\")\n",
    "        self.target_label.grid(row=0, column=0, sticky=\"w\")\n",
    "        self.target_entry = ttk.Entry(target_frame, width=20)\n",
    "        self.target_entry.grid(row=0, column=1)\n",
    "\n",
    "        self.plot_btn = ttk.Button(root, text=\"Show Sales Graph\", command=self.plot_graph)\n",
    "        self.plot_btn.pack(pady=10)\n",
    "\n",
    "        self.result_label = ttk.Label(root, text=\"\", font=(\"Helvetica\", 12), background=\"#e6f2ff\", foreground=\"#0066cc\")\n",
    "        self.result_label.pack(pady=10)\n",
    "\n",
    "    def is_valid_date(self, date_str):\n",
    "        try:\n",
    "            datetime.strptime(date_str, \"%Y-%m-%d\")\n",
    "            return True\n",
    "        except ValueError:\n",
    "            return False\n",
    "\n",
    "    def submit_sales(self):\n",
    "        try:\n",
    "            date_val = self.date_entry.get()\n",
    "            val = float(self.entry.get())\n",
    "            if val < 0:\n",
    "                messagebox.showerror(\"Error\", \"Sales cannot be negative.\")\n",
    "                self.entry.delete(0, tk.END)\n",
    "                return\n",
    "            if not date_val or not self.is_valid_date(date_val):\n",
    "                messagebox.showerror(\"Error\", \"Please enter a valid date in YYYY-MM-DD format.\")\n",
    "                self.date_entry.delete(0, tk.END)\n",
    "                return\n",
    "            self.sales.append(val)\n",
    "            self.dates.append(date_val)\n",
    "            self.entry.delete(0, tk.END)\n",
    "            self.date_entry.delete(0, tk.END)\n",
    "            self.current_day += 1\n",
    "            if self.current_day <= self.num_days:\n",
    "                self.label.config(text=f\"Enter Date for Day {self.current_day} (YYYY-MM-DD):\")\n",
    "                self.sales_label.config(text=f\"Enter Sales for Day {self.current_day}:\")\n",
    "            else:\n",
    "                self.show_result()\n",
    "        except ValueError:\n",
    "            messagebox.showerror(\"Error\", \"Enter a valid number.\")\n",
    "            self.entry.delete(0, tk.END)\n",
    "\n",
    "    def show_result(self):\n",
    "        total = sum(self.sales)\n",
    "        average = total / len(self.sales) if self.sales else 0\n",
    "        highest = max(self.sales) if self.sales else 0\n",
    "        lowest = min(self.sales) if self.sales else 0\n",
    "        self.label.config(text=\"Entry complete.\")\n",
    "        self.sales_label.grid_remove()\n",
    "        self.entry.grid_remove()\n",
    "        self.date_entry.grid_remove()\n",
    "        self.submit_btn.grid_remove()\n",
    "        self.result_label.config(\n",
    "            text=(\n",
    "                f\"Business Analytics Results:\\n\"\n",
    "                f\"Total Sales: {total}\\n\"\n",
    "                f\"Average Sales: {average:.2f}\\n\"\n",
    "                f\"Highest Sale: {highest}\\n\"\n",
    "                f\"Lowest Sale: {lowest}\"\n",
    "            )\n",
    "        )\n",
    "\n",
    "    def plot_graph(self):\n",
    "        if not self.sales or not self.dates:\n",
    "            messagebox.showerror(\"Error\", \"No sales data to plot.\")\n",
    "            return\n",
    "        try:\n",
    "            target = float(self.target_entry.get())\n",
    "        except ValueError:\n",
    "            messagebox.showerror(\"Error\", \"Enter a valid sales target.\")\n",
    "            return\n",
    "\n",
    "        fig, ax = plt.subplots(figsize=(6, 4))\n",
    "        ax.plot(self.dates, self.sales, marker='o', color=\"#007acc\", label='Sales')\n",
    "        ax.axhline(y=target, color='#ff471a', linestyle='--', label='Sales Target')\n",
    "        ax.set_title('Sales Performance vs Target')\n",
    "        ax.set_xlabel('Date')\n",
    "        ax.set_ylabel('Sales')\n",
    "        ax.legend()\n",
    "        fig.autofmt_xdate()\n",
    "\n",
    "        canvas = FigureCanvasTkAgg(fig, master=self.root)\n",
    "        canvas.draw()\n",
    "        canvas.get_tk_widget().pack()\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    root = tk.Tk()\n",
    "    app = SalesApp(root, num_days=5) \n",
    "    root.mainloop()\n"
   ]
  }
